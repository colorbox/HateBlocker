<tr>
  <th></th>
  <th>
    <%= prohibition.word %>
  </th>
  <th>
    <% if prohibition.activated? %>
      <%= button_to "無効", prohibition_path(prohibition), {method: :put, class: 'activate_switch'} %>
    <% else %>
      <%= button_to "有効", prohibition_path(prohibition), {method: :put, class: 'activate_switch'} %>
    <% end %>
  </th>
  <th>
    <%= link_to '削除', prohibition_path(prohibition), method: :delete %>
  </th>
</tr>
